<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorOnPrimary">@android:color/primary_text_dark</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="alertDialogTheme">@style/RoundedCornersDialog</item>
    </style>

    <style name="RoundedCornersDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="dialogCornerRadius">10dp</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="minHeight">?attr/actionBarSize</item>
    </style>

</resources>